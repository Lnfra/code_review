
<h1>Listing Comments</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th>Answer</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.content %></td>
        <td><%= comment.user_id %></td>
        <td><%= comment.answer_id %></td>
        <td><%= link_to 'Show', comment, class: 'btn btn-primary' %>
        <%= link_to 'Edit', edit_comment_path(comment), class: 'btn btn-primary' %>
        <%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_comment_path, class: 'btn btn-primary' %>
