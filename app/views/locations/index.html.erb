<p id="notice"><%= notice %></p>

<h1>Listing Locations</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>City</th>
      <th>Country</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.name %></td>
        <td><%= location.city %></td>
        <td><%= location.country %></td>
        <td><%= link_to 'Show', location, class: 'btn btn-primary' %>
        <%= link_to 'Edit', edit_location_path(location), class: 'btn btn-primary' %>
        <%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Location', new_location_path, class: 'btn btn-primary' %>
