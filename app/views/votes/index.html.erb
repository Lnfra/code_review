<p id="notice"><%= notice %></p>

<h1>Listing Votes</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>User</th>
      <th>Answer</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @votes.each do |vote| %>
      <tr>
        <td><%= vote.user_id %></td>
        <td><%= vote.answer_id %></td>
        <td><%= link_to 'Show', vote, class: 'btn btn-primary' %>
        <%= link_to 'Edit', edit_vote_path(vote), class: 'btn btn-primary' %>
        <%= link_to 'Destroy', vote, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Vote', new_vote_path, class: 'btn btn-primary' %>
