<p id="notice"><%= notice %></p>

<h1>Listing Classrooms</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Location</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @classrooms.each do |classroom| %>
      <tr>
        <td><%= classroom.name %></td>
        <td><%= classroom.start_date %></td>
        <td><%= classroom.end_date %></td>
        <td><%= classroom.location.name %></td>
        <td><%= link_to 'Show', classroom, class: 'btn btn-primary' %>
        <%= link_to 'Edit', edit_classroom_path(classroom), class: 'btn btn-primary' %>
        <%= link_to 'Destroy', classroom, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Classroom', new_classroom_path, class: 'btn btn-primary' %>
