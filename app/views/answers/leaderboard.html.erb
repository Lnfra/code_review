<div class="row">

  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading"><h2>Top 10 voted answers</h2></div>
      <div class="panel-body">
        <table class="table table-hover">
          <thead>
          <tr>
            <th></th>
            <th>Name</th>
            <th>Course</th>
            <th>Question</th>
            <th>Votes</th>
          </tr>
          </thead>
          <tbody>
          <% @topAnswers.each do |answer| %>
              <tr>
                <td><%= image_tag answer.user.avatar.url(:thumb) %></td>
                <td><%= answer.user.name %></td>
                <td><%= answer.user.classroom.name %></td>
                <td><%= link_to answer.question.title , question_path(answer.question.id) %></td>
                <td><%= answer[:cached_votes_score] %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

