<p id="notice"><%= notice %></p>

<h1>Listing Answers</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th>Question</th>
      <th>Code language</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
          <td>
           <pre class="prettyprint"><%= answer.content %></pre>
          </td>
        <td><%= answer.user.name %></td>
        <td><%= answer.question.title %></td>
        <td><%= answer.code_language.name %></td>
        <td><%= link_to 'View', answer, class: 'btn btn-primary' %>
        <%= link_to 'Edit', edit_answer_path(answer), class: 'btn btn-primary'  %>
        <%= link_to 'Delete', answer, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Answer', new_answer_path, class: 'btn btn-primary' %>
